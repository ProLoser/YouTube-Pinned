{
  "manifest_version": 2,
  "name": "YouTube Pinned",
  "version": "0.1.0",
  "description": "YouTube videos stay fixed to the top half of the window",
  "icons": {
  	"16": "images/icon-16.png",
  	"32": "images/icon-32.png",
  	"114": "images/icon-114.png",
    "144": "images/icon-144.png",
  	"512": "images/icon-512.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "css": ["tweaks.css"]
    }
  ],
  
  "author": "Dean Sofer",
  "homepage_url": "http://deansofer.com"
}